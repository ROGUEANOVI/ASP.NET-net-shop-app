@model IEnumerable<net_shop.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Lista De Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Product" asp-action="Upsert">
                <i class="fa-solid fa-plus"></i> Agregar Producto
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Nombre
                    </th>
                    <th class="text-center">
                        Descripcion
                    </th>
                    <th class="text-center">
                        Precio
                    </th>
                    <th class="text-center">
                        Img
                    </th>
                    <th class="text-center">
                        Categoria
                    </th>
                    <th class="text-center">
                        Tipo app
                    </th>
                    <th class="text-center">
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="text-center">
                            @product.Name
                        </td>
                        <td class="text-center">
                            @product.Description
                        </td>
                        <td class="text-center">
                            @product.Price
                        </td>
                        <td class="text-center">
                            <img src="@product.ImageUrl" width="30" />
                        </td>
                        <td class="text-center">
                            @product.Category.Name
                        </td>
                        <td class="text-center">
                            @product.AppType.Name
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Upsert" asp-route-Id="@product.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2> No hay productos para mostrar. </h2>
    }
</div>